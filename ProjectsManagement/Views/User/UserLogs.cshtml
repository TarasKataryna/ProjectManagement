@using Common.Models
@{
	ViewData["Title"] = "User Logs";
}

@if (@ViewBag.UserName != null)
{
	<div style="text-align: left">
		<h4>@ViewBag.UserName logs</h4>
	</div>
}

@if (@Model.Count > 0)
{
	<ul class="list-group" style="margin-top: 45px;">
		@{
			<li class="list-group-item" style="border: none !important; font-weight: bold">
				<div class="row">
					<div style="display: inline-block" class="col-sm-5">
						<span>Project Name</span>
					</div>
					<div style="display: inline-block" class="col-sm-3">
						<span>Work Date</span>
					</div>
					<div style="display: inline-block" class="col-sm-3">
						<span>Spent Hours</span>
					</div>
				</div>
			</li>
			foreach (LogModel item in @Model)
			{
				<li class="list-group-item">
					<div style="display: inline !important" class="row">
						<div style="display: inline-block" class="col-sm-5">
							<span>@item.ProjectName</span>
						</div>
						<div style="display: inline-block" class="col-sm-3">
							<span>@item.WorkDay.Date</span>
						</div>
						<div style="display: inline-block" class="col-sm-3">
							<span>@item.SpentHours</span>
						</div>
					</div>
				</li>
			}
		}
	</ul>
}
else
{
	<div style="margin-top: 50px; text-align: center ">
		<h2>There is no logs for this User</h2>
	</div>
}