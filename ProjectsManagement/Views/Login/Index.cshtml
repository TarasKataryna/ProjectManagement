@{
	ViewData["Title"] = "Home Page";
}

<link rel="stylesheet" href="~/css/Login/login.css" />

<div class="login-wrapper">
	<div class="login-text-wrapper">
		<span class="display-4" data-bind="text: loginMode() ? 'Login' : 'Register'"></span>
	</div>
	<form>
		<div class="form-group">
			<label for="login-email">Email address</label>
			<input data-bind="value: login" type="email" class="form-control" id="login-email" placeholder="Email">
		</div>
		<div class="form-group">
			<label for="login-password">Password</label>
			<input data-bind="value: password" type="password" class="form-control" id="login-password" placeholder="Password">
		</div>

		<!-- ko if: !loginMode() -->
		<div class="form-group">
			<label for="login-firstname">First Name</label>
			<input data-bind="value: firstName" type="text" class="form-control" id="login-firstname" placeholder="First Name">
		</div>
		<div class="form-group">
			<label for="login-lastname">Last Name</label>
			<input data-bind="value: lastName" type="text" class="form-control" id="login-lastname" placeholder="Last Name">
		</div>
		<!-- /ko -->

		<div class="register-link-wrapper">
			<span class="register-link" data-bind="click: changeMode, text: loginMode() ? 'Do not have an account yet? Register.' : 'Already have an account? Login.'"></span>
		</div>

		<!-- ko if: loginValidationErrors() -->
		<div class="validation-text-wrapper">
			<span class="validation-text">Login or password is incorrect.</span>
		</div>
		<!-- /ko -->

		<button data-bind="click: submit, text: loginMode() ? 'Login' : 'Register' " class="btn btn-primary"></button>
	</form>
</div>

<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
	<div class="modal-dialog" role="document">
		<div class="modal-content">
			<div class="modal-header">
				<h4 class="modal-title" id="myModalLabel"></h4>
				<button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
			</div>
			<div class="modal-body">
				<p></p>
			</div>
			<div class="modal-footer">
				<button type="button" class="btn btn-primary" data-dismiss="modal">Close</button>
			</div>
		</div>
	</div>
</div>

	@section Scripts{
		<script src="~/js/knockout-3.5.1.js"></script>
		<script src="~/js/Login/login.js"></script>
	}
